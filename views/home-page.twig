{% extends "base.twig" %}

{% block content %}
<div class="pe-container">  
  <div class="pe-block nomargin peSlider peVolo" data-autopause="enabled" data-height="0,2.35,600" data-orig-width="940" data-orig-height="600" data-plugin="peVario">
  {% for show in posts %}
    <div data-delay="5" class="visible">
      <a href="{{show.permalink}}">
        {% if show.get_field('slider_image') %}
          <img src="{{theme.link}}/img/blank/940x460.gif" class="peLazyLoading" data-original="{{TimberImage(show.get_field('slider_image')).src}}" width="940" height="460" alt="alt text" />
        {% else %}
          <img src="{{theme.link}}/img/blank/940x460.gif" class="peLazyLoading" data-original="{{show.thumbnail.src('show_main_thumb')}}" width="940" height="460" alt="alt text" />
        {% endif %}
        {% if show.get_field('slider_type') == "Amarelo duas linhas" %}
          <div class="peCaption"> 
            <div class="peCaptionLayer pe-caption-medium pe-caption-background" data-duration="0.8" data-delay="0.5" data-transition="fadeInLeftBig" data-x="50" data-y="170" >
              {{show.get_field('slider_first_subtitle')}}
            </div>
            <div class="peCaptionLayer pe-caption-medium pe-caption-background" data-duration="0.8" data-delay="1.2" data-transition="fadeInLeftBig" data-x="50" data-y="220">
              {{show.get_field('slider_second_subtitle')}}
            </div>
            <div class="peCaptionLayer pe-caption-large pe-caption-background" data-duration="0.8" data-delay="1.7" data-transition="fadeInLeftBig" data-x="50" data-y="270" style="background-color:#222;">
              {{show.get_field('slider_main_title')}}
            </div>    
          </div>
        {% elseif show.get_field('slider_type') == "Amarelo uma linha" %}
          <div class="peCaption">
            <div class="peCaptionLayer pe-caption-large pe-caption-background" data-duration="0.8" data-delay="1.2" data-transition="fadeIn" data-x="115" data-y="130" style="color: white">
              {{show.get_field('slider_first_subtitle')}}
            </div>
            <div class="peCaptionLayer pe-caption-large pe-caption-background" data-duration="0.8" data-delay="1.5" data-transition="fadeInLeftBig" data-x="50" data-y="270" style="background-color:#222;">
              {{show.get_field('slider_main_title')}}
            </div>  
          </div>
        {% else %}
          <div class="peCaption">
            <div class="peCaptionLayer pe-caption-large" data-duration="0.8" data-delay="0.7" data-transition="fadeInDown" data-x="10" data-y="60" style="color: white; font-size: 55px">
              {{show.get_field('slider_main_title')}}
            </div>
            <div class="peCaptionLayer pe-caption-large" data-duration="0.8" data-delay="2.1" data-transition="fadeInDown" data-x="30" data-y="160" style="color: white; font-size: 55px">
              {{show.get_field('slider_first_subtitle')}}
            </div>
          </div>
        {% endif %}
      </a>
    </div>
  {% endfor %}
</div>
<div class="action">
  <div class="pe-container">
    <section class="row-fluid">
      <div class="span12">
        <h5>Confira estes e outros shows na nossa programação. <a href="{{fn('get_permalink_by_name', 'shows')}}">TELENTREGA / 51 3231 4142 <i class="icon-right-open-mini"></i></a></h5>       
      </div>
    </section>
  </div><!--end container-->
</div><!--end wide wrapper--> 
<div class="pe-container">  
  <div class="process pe-block">    
    <div class="row-fluid">
      <div class="span12">
        <div class="row-fluid">
          {% for show in posts %}
            {% if loop.index <= 4 %}
              <div class="span3">
                <h3><span class="accent"><i class="icon-music"></i></span> {{show.title}}</h3>            
                <p>{{show.get_preview(40, false, '')}}</p>
                <a href="{{show.permalink}}" class="read-more">{{show.get_field('show_date_location')}}</a>
              </div>
            {% endif %}
          {% endfor %}
        </div>
      </div>
    </div>
  </div>
  <div class="row-fluid pe-block">      
    <div class="row-fluid">
      <div class="span3">
        <h3>
          Confira toda a nossa programação.
          <span class="subtitle"><a href="{{fn('get_permalink_by_name', 'shows')}}">Agenda completa...</a></span>
        </h3>
      </div>  
  <!--carousel controls-->
  <div class="carousel-nav">
    <a href="#" id="carouselPrev" class="prev-btn"><i class="icon-left-open"></i></a>
    <a href="#" id="carouselNext" class="next-btn"><i class="icon-right-open"></i></a>
  </div>
</div>
    <!--carousel-->
    <div class="row-fluid carouselBox" data-slidewidth="240">
    {% for show in posts %}
      <div>                    
        <div>
          <div class="project-item">
            <a class="over-effect" href="{{show.permalink}}">
              <img src="img/blank/420x372.gif" class="peLazyLoading" data-original="{{show.thumbnail.src('home_thumb')}}" width="420" height="372" alt="{{show.title}}" />
            </a>
            <h6><a href="{{show.permalink}}">{{show.title}}</a></h6>
            <p>{{show.get_field('show_date_location')}}</p>
          </div>
        </div>  
      </div>
    {% endfor %}
    </div><!--end row 2-->
  </div>
</div>
{% endblock %}